    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const envelopes = document.querySelectorAll('.envelope');
            const heartsContainer = document.getElementById('hearts');
            
            // Create floating background hearts
            function createBackgroundHeart() {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = 'â™¥';
                
                // Random properties
                const size = Math.random() * 20 + 10;
                const left = Math.random() * 100;
                const delay = Math.random() * 5;
                const colors = ['#ff4d4d', '#ff6b6b', '#ff85a2', '#ff9e9e', '#ffb3b3', '#ffcccb', '#d88aff', '#a89cff'];
                
                heart.style.fontSize = `${size}px`;
                heart.style.left = `${left}%`;
                heart.style.top = `${Math.random() * 100}%`;
                heart.style.animationDelay = `${delay}s`;
                heart.style.color = colors[Math.floor(Math.random() * colors.length)];
                heart.style.animationDuration = `${Math.random() * 3 + 4}s`;
                
                heartsContainer.appendChild(heart);
                
                // Remove after animation
                setTimeout(() => {
                    heart.remove();
                }, 6000);
            }
            
            // Initial background hearts
            for (let i = 0; i < 20; i++) {
                setTimeout(createBackgroundHeart, i * 300);
            }
            
            // Continuous background hearts
            setInterval(createBackgroundHeart, 600);
            
            // Envelope interaction
            envelopes.forEach(envelope => {
                envelope.addEventListener('click', (e) => {
                    // Prevent triggering multiple times during animation
                    if (envelope.classList.contains('animating')) return;
                    
                    envelope.classList.add('animating');
                    envelope.classList.toggle('flipped');
                    
                    // Create heart burst at envelope position
                    createHeartBurst(envelope);
                    
                    // Reset animating class after animation completes
                    setTimeout(() => {
                        envelope.classList.remove('animating');
                    }, 1000);
                });
            });
            
            // Create heart burst animation
            function createHeartBurst(envelopeElement) {
                const rect = envelopeElement.getBoundingClientRect();
                const centerX = rect.left + rect.width / 2;
                const centerY = rect.top + rect.height / 2;
                
                // Create multiple hearts
                for (let i = 0; i < 18; i++) {
                    setTimeout(() => {
                        const heart = document.createElement('div');
                        heart.className = 'heart';
                        heart.innerHTML = 'â™¥';
                        
                        // Random properties for burst
                        const size = Math.random() * 25 + 10;
                        const angle = Math.random() * Math.PI * 2;
                        const distance = Math.random() * 100 + 50;
                        const colors = ['#ff4d4d', '#ff6b6b', '#ff85a2', '#ffcccb', '#ffd700', '#4da6ff', '#d88aff'];
                        
                        // Calculate position
                        const x = centerX + Math.cos(angle) * distance;
                        const y = centerY + Math.sin(angle) * distance;
                        
                        heart.style.fontSize = `${size}px`;
                        heart.style.left = `${x}px`;
                        heart.style.top = `${y}px`;
                        heart.style.color = colors[Math.floor(Math.random() * colors.length)];
                        heart.style.opacity = '1';
                        heart.style.animation = `float 2.5s ease-out forwards`;
                        heart.style.zIndex = '1000';
                        
                        heartsContainer.appendChild(heart);
                        
                        // Remove after animation
                        setTimeout(() => {
                            heart.remove();
                        }, 2600);
                    }, i * 40);
                }
            }
            
            // Subtle floating animation for unopened envelopes
            function floatEnvelopes() {
                document.querySelectorAll('.envelope:not(.flipped)').forEach((envelope, index) => {
                    const angle = Date.now() / 2000 + index;
                    envelope.style.transform = `translateY(${Math.sin(angle) * 3}px)`;
                });
                requestAnimationFrame(floatEnvelopes);
            }
            
            floatEnvelopes();
        });
    </script>
</body>
